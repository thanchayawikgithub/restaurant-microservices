{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/restaurant-microservices/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/restaurant-microservices/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/restaurant-microservices",
  "projects": {
    "restaurant-microservices": {
      "type": "application",
      "root": "apps/restaurant-microservices",
      "entryFile": "main",
      "sourceRoot": "apps/restaurant-microservices/src",
      "compilerOptions": {
        "tsConfigPath": "apps/restaurant-microservices/tsconfig.app.json"
      }
    },
    "menu": {
      "type": "application",
      "root": "apps/menu",
      "entryFile": "main",
      "sourceRoot": "apps/menu/src",
      "compilerOptions": {
        "tsConfigPath": "apps/menu/tsconfig.app.json"
      }
    },
    "order": {
      "type": "application",
      "root": "apps/order",
      "entryFile": "main",
      "sourceRoot": "apps/order/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order/tsconfig.app.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    }
  }
}